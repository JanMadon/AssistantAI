{% extends 'layout/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="border-top border-bottom">
        <div class="row">
            <div class="col-2 chat-list p-0">
                <ul class="list-group">
                    {% for chat in chats %}
                        <li>
                            <a href="{{ path('whatsApp.chats', {'id': chat.id.user}) }}"
                               class="list-group-item cursor-pointer {{ chat.id.user == id ? 'active' : '' }}">
                                {{ chat.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-7 p-0 d-flex flex-column">
                {% for chat in chats %}
                    {% if chat.id.user == id %}
                        <div class="chat-window flex-grow-1">
                            {% for message in messages %}
                                <div class="chat-message {{ message.fromMe ? 'sent' : 'received'}}">
                                    {{ message.body }}
                                </div>
                                {% set combinedMessage = message.time ~' / '~ message.ack %}
                                {{ include('components/infoBelowMessage.html.twig', {message: combinedMessage, style:'secondary-emphasis'}) }}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endfor %}
                <div class="message-input">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Napisz wiadomość...">
                        <button class="btn btn-primary" type="button">Wyślij</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .chat-message {
            width: fit-content;
            padding: 2px 10px;
            margin-top: 8px;
            border: solid 1px black;
            border-radius: 10px;
        }

        .chat-window {
            max-height: 500px;
            overflow: scroll;
        }

        .sent {
            color: black;
            background-color: #a1dae7;
        }

        .received {
            color: black;
            background-color: rgba(181, 244, 186, 0.88);
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}
