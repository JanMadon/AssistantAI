{% extends 'layout/base.html.twig' %}

{% block title %} AiDevs3-prework {% endblock %}

{% block body %}
    <a href="?" class="btn btn-warning">CLEAR</a>
    <div class="row m-1">
        <div class="col-2 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Poligon test</h5>
                    <a href="?task=poligon" class="btn btn-primary">Start Task</a>
                </div>
            </div>
        </div>
        <div class="col-2 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Logowanie</h5>
                    <a href="?task=login" class="btn btn-primary">Start Task</a>
                </div>
            </div>
        </div>
        <div class="col-2 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Autoryzacja</h5>
                    <a href="?task=auth" class="btn btn-primary">Start Task</a>
                </div>
            </div>
        </div>
        <div class="col-2 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sprawd≈∫ i popraw dane</h5>
                    <a href="?task=checkData" class="btn btn-primary">Start Task</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mx-5">
        {% if result ?? null %}
            <div class="m-5 text-info">
                <p>task name: {{ result.task }}</p>
                <p>response code: {{ result.code }}</p>
                <p>api code: {{ result.data.code }}</p>
                <p>api massage: {{ result.data.message }} </p>
            </div>
        {% endif %}

        {% if html ?? null  %}
            <p> question: {{ question }}</p>
            <p> answer: {{ answer}} </p>

            Response HTML
            <div class="border border-danger m-1">

                {{ html|raw }}

            </div>
        {% endif %}

        {% if text ?? null  %}
            <p> answer flag: {{ text }}</p>
        {% endif %}
    </div>
    <pre>
        {{ dump(rawData) }}
    </pre>

{% endblock %}