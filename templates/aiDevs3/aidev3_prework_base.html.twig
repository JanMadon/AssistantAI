{% extends 'layout/base.html.twig' %}

{% block title %} AiDevs3-prework {% endblock %}

{% block body %}
    <a href="?" class="btn btn-warning">CLEAR</a>
    <div class="row">
        <div class="col-3 m-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Poligon test</h5>
{#                    <p class="card-text">starts session.</p>#}
                    <a href="?task=poligon" class="btn btn-primary">Get first task</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {% if result ?? null %}
        <div class="m-5 text-info">
            <p>task name: {{ result.task }}</p>
            <p>response code: {{ result.code }}</p>
            <p>api code: {{ result.data.code }}</p>
            <p>api massage: {{ result.data.message }} </p>
        <div>
        {% endif %}
    </div>

{% endblock %}