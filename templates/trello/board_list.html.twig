{% extends 'layout/base.html.twig' %}

{% block title %} trello-board-list {% endblock %}

{% block body %}

    <h3>My boards list:</h3>
    {% for board in boards %}
        <div class="d-flex gap-3">
            <a href={{ path('trello_board_show', {'id': board.shortId}) }}>show</a>
            {{ board.name }} <a href="{{ board.url }}"> link to trello </a>
           <p class="text-danger ">ID:   {{ board.shortId }}</p>
        </div>
    {% endfor %}


{% endblock %}